rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    // Helper function to check if request is from server
    function isServer() {
      return request.auth != null && request.auth.token.isServer == true;
    }

    // USER PROFILE
    match /users/{uid} {
      allow read: if isOwner(uid);
      allow write: if false;  // prevent frontend writes - server-only
    }

    // KUNDALI (Server-only writes)
    match /kundali/{uid} {
      allow read: if isOwner(uid);
      allow write: if isServer();
    }

    // SCANS (Palm / Face / Aura)
    match /scans/{uid}/{scanId} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid);
    }

    // TIMELINE (Client can add events)
    match /timeline/{uid} {
      allow read, write: if isOwner(uid);
    }

    // CHAT HISTORY (AI Guru)
    match /guruChat/{uid}/{msgId} {
      allow read, write: if isOwner(uid);
    }
    
    // EMAIL LOGS (Server-only)
    match /email_logs/{logId} {
      allow read: if isServer();
      allow write: if isServer();
    }
    
    // EMAIL QUEUE (Server-only)
    match /email_queue/{queueId} {
      allow read: if isServer();
      allow write: if isServer();
    }
    
    // REPORTS (User can read their own, server writes)
    match /reports/{uid}/{reportId} {
      allow read: if isOwner(uid);
      allow write: if isServer();
    }
    
    // PAYMENTS (User can read their own, server writes)
    match /payments/{uid}/{paymentId} {
      allow read: if isOwner(uid);
      allow write: if isServer();
    }
    
    // SUBSCRIPTIONS (User can read their own, server writes)
    match /subscriptions/{uid} {
      allow read: if isOwner(uid);
      allow write: if isServer();
    }
    
    // NOTIFICATIONS (User can read/write their own)
    match /notifications/{uid}/items/{notificationId} {
      allow read: if isOwner(uid);
      allow write: if isServer() || isOwner(uid);
    }
    
    // NOTIFICATION QUEUE (Server-only)
    match /notification_queue/{queueId} {
      allow read, write: if isServer();
    }
    
    // ADMIN LOGS (Server-only)
    match /logs/{logType}/{logId} {
      allow read, write: if isServer();
    }
    
    // KNOWLEDGE BASE (Read for authenticated users, write for admins)
    match /knowledge_base/{docId} {
      allow read: if isAuthenticated();
      allow write: if isServer() || (isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // KNOWLEDGE CATEGORIES (Read for authenticated users, write for admins)
    match /knowledge_categories/{category}/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isServer() || (isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Admin collections
    match /admins/{adminId} {
      allow read, write: if isAdmin();
    }
    
    match /admin_logs/{logId} {
      allow read, write: if isAdmin();
    }
  }
}

// Helper function to check if user is admin
function isAdmin() {
  return request.auth != null && 
         exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role in ['SuperAdmin', 'Astrologer', 'Support', 'ContentManager', 'Finance'];
}

